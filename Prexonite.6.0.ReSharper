      <SearchPattern>Assert.IsInstanceOfType($args$);</SearchPattern>
      <Params />
      <Placeholders>
        <ArgumentPlaceholder Name="args" Minimal="-1" Maximal="-1" />
      </Placeholders>
    </Pattern>
  </CustomStructuralPatterns>
</Configuration>